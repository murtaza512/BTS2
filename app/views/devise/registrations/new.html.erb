 <div class="container">

    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name))  do |f| %>
      <%= devise_error_messages! %>


       <div class="form-group row">
        <%= f.label :name ,class:'col-md-3 label-control' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "off",class:'col-md-8 form-control' %>
      </div>

      <div class="form-group row">
        <%= f.label :email ,class:'col-md-3 label-control' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'col-md-8 form-control' %>
      </div>

      <div class="form-group row">
        <div class='col-md-3'>
            <%= f.label :password ,class:' label-control'%>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "off" ,class:'col-md-8 form-control' %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation ,class:'col-md-3 label-control'%><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" ,class:'col-md-8 form-control'%>
      </div>
       <div class="form-group row">
        <%= f.label :user_type ,class:'col-md-3 label-control'%><br />

        <%= f.select :user_type, options_for_select(["manager","qa","developer"])%>

      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary ' %>
      </div>
    <% end %>
     <br/>
    <%= render "devise/shared/links" %>
</div>
