<div class="container">
   <br/>
   <div class='jumbotron bg-dark text-white'><h1>Welcome To BugZilla</h1></div>

    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="align-center">
      <div class="form-group row">
        <%= f.label :email ,class:'col-md-2 label-control'%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:'col-md-8 form-control'%>
      </div>

      <div class="form-group row">
        <%= f.label :password ,class:'col-md-2 label-control'%><br />
        <%= f.password_field :password, autocomplete: "off",class:'col-md-8 form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions row">
        <%= f.submit "Log in" ,class:'btn btn-danger offset-md-2' %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
    </div>
</div>
